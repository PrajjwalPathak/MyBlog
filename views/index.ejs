<%- include("partials/head"); -%>
    <div class="header">
        <%- include("partials/header"); -%>
    </div>

    <div class="main">
        <h1>Home</h1>
        <p class="homeContent">
            <%= homeData %>
        </p>

        <% postData.forEach(function(element) { %>
            <h1>
                <%= element.title %>
            </h1>
            <p class="content">
                <%= element.post.substring(0, 300) + "..." %>
                    <a class="readMore" href="/posts/<%= element.title %>">Read More</a>
            </p>
            <% }); %>

    </div>

    <div class="footer">
        <%- include("partials/footer"); -%>
    </div>
    <%- include("partials/foot"); -%>